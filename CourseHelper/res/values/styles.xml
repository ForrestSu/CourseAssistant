<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- 定义一条水平线  -->
    <style name="horizontal_layout">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#dadada</item>
       
    </style>
    <!-- 定义一条竖直线  -->
    <style name="vertical_layout">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#dadada</item>
    </style>
    

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
   <!-- mytheme notitle. -->
    <style name="notitle">
        <item name="android:windowNoTitle">true</item>
    </style> 
    
   <style name="txtListStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="txtMainFuncStyle">
        <item name="android:textSize">17px</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="txtMainFuncStyle2">
        <item name="android:textSize">30px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">15px</item>
    </style>


</resources>